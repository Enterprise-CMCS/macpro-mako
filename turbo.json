{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "tasks": {
    "lint": {
      "cache": false
    },
    "build:cli": {
      "inputs": ["bin/cli/"],
      "cache": false
    },
    "e2e": {
      "inputs": ["test"],
      "cache": false,
      "env": ["VITE_BASE_URL", "VITE_E2E_PASSWORD"]
    },
    "e2e:ui": {
      "inputs": ["test"],
      "cache": false,
      "env": ["VITE_BASE_URL", "VITE_E2E_PASSWORD"]
    },
    "test": {
      "inputs": ["lib", "lib/libs/email", "react-app"],
      "cache": false,
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "STAGE_NAME",
        "PROJECT"
      ]
    },
    "test:coverage": {
      "inputs": ["lib", "lib/libs/email", "react-app"],
      "cache": false,
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "STAGE_NAME",
        "PROJECT"
      ]
    },
    "email-dev": {
      "inputs": ["lib/libs/email"],
      "cache": false,
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_SESSION_TOKEN",
        "STAGE_NAME",
        "PROJECT"
      ]
    }
  }
}
